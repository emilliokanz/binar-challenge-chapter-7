<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="assets/css/styles.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="assets/css/starter.css">
  <title>Document</title>
</head>
<body>
  <h1>USER GAME</h1>
  <form>
    <input type="text" name="search_name" class="border-2" placeholder="enter name here" value="<%= searchName %>" />
    <button type="submit" class="btn btn-warning">Search</button>
  </form>
  <div style="display: flex; justify-content:right" onclick="to_homepage()">
    <button class="btn btn-warning">Add User</button>
    <script>
      function to_homepage(){
        location.href= "/add-user"
      }
    </script>
  </div>
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">id</th>
        <th scope="col">Username</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
    <% users.forEach(function(user) { %>
      <tr>
        <th scope="row"><%= user.id %></th>
        <td><%= user.username %></td>
        <td>
          <div>
            <a style="color: blue" class="p-3" href="/detail-user/<%= user.id %>">
              Details
            </a>
            <a style="color: blue" class="p-3" href="/edit/<%= user.id %>">
              Edit
            </a>
            <a style="color: red" class="p-3" href="/delete/<%= user.id %>" onclick="return confirm('are you sure ?')">
              Delete
            </a>
          </div>
        </td>
      </tr>
    <% }); %>
    </tbody>
  </table>
</body>
</html>